<linker>
  <!-- 保护所有服务器类型（反射加载） -->
  <assembly fullname="Netch">
    <type fullname="Netch.Servers.*" preserve="all" />
    <type fullname="Netch.Models.*" preserve="all" />
    <type fullname="Netch.Controllers.*" preserve="all" />
    <type fullname="Netch.Forms.*" preserve="all" />
    <type fullname="Netch.Utils.*" preserve="all" />
    <type fullname="Netch.Interfaces.*" preserve="all" />
    <type fullname="Netch.JsonConverter.*" preserve="all" />
  </assembly>

  <!-- 保护 JSON 序列化相关 -->
  <assembly fullname="System.Text.Json">
    <type fullname="System.Text.Json.*" preserve="all" />
  </assembly>

  <!-- 保护 Windows Forms -->
  <assembly fullname="System.Windows.Forms">
    <type fullname="System.Windows.Forms.*" preserve="all" />
  </assembly>
</linker>
